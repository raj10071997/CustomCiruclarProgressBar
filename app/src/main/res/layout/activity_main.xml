<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:whatever="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.example.customprogressbar.customView

        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/dhanraj"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        whatever:Image="@drawable/microphone"
        whatever:label="wait"
        whatever:main_circle_color="#097054"
        whatever:label_size="40"
        whatever:stroke_width="20"
        whatever:rotatingInverseRate="200"
        whatever:sweep_angle="50"
        whatever:label_color="#FF9900"
        whatever:rotating_bar_color="#6599FF"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stopSpinning"
        android:id="@+id/stop"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
